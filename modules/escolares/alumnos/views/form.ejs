
  <div class="centered-container">
    <div class="form-container">
      <a href="/<%= moduleName %>/list" class="close-btn">&times;</a>
      <h2 class="text-center mb-4"> <%= typeform === 'edit' ? 'Editar': 'Crear' %> <%= title %></h2>
      <% if (Array.isArray(error_msg) && error_msg.length > 0) { %>
        <div class="alert alert-danger">
          <% error_msg.forEach(function(msg) { %>
            <p class="mb-0"><%= msg %></p>
          <% }) %>
        </div>
      <% } %>
      <form action="/<%= moduleName %>/form/edit/<%= typeof item !== 'undefined' ? item._id : 'new' %>" method="POST" enctype="multipart/form-data">
        <div class="form-group text-center">
          <img id="editPreview" class="avatar-preview mb-3" src="/uploads/<%= item.profileImage %>" alt="Vista previa" onclick="document.getElementById('editProfileImage').click();">
          <input type="file" id="editProfileImage" name="profileImage" accept="image/*" style="display: none;" onchange="showPreview(this, 'editPreview')">
        </div>
        <div class="form-group">
          <label for="ncontrol">Num. de Control</label>
          <input type="text" class="form-control" id="ncontrol" name="ncontrol" value="<%= typeof item !== 'undefined' ? item.ncontrol : '' %>" required>
        </div>
        <div class="form-group">
          <label for="name">Nombre</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= typeof item !== 'undefined' ? item.name : '' %>" required>
        </div>
        <div class="form-group">
          <label for="email">Correo Electrónico</label>
          <input type="email" class="form-control" id="email" name="email" value="<%= typeof item !== 'undefined' ? item.email : '' %>" required>
        </div>
        <div class="form-group">
          <label for="born_date">Fecha de nacimiento</label>
          <input type="date" class="form-control" id="born_date" name="born_date" value="<%= typeof item !== 'undefined' ? item.born_date.toISOString().split('T')[0] : '' %>" required>
        </div>
        <div class="form-group">
          <label for="sex">Sexo</label>
          <select class="form-control" id="sex" name="sex" required>
            <option value="">Selecciona una opción</option>
            <% if ( typeof item !== 'undefined' ) { %>
              <option value="femenino" <%= item.sex === 'femenino' ? 'selected' : '' %>>Femenino</option>
              <option value="masculino" <%= item.sex === 'masculino' ? 'selected' : '' %>>Masculino</option>
            <% } else { %>
                <option value="femenino" selected>Femenino</option>
                <option value="masculino">Masculino</option>
            <% } %>
          </select>
        </div>
        <div class="form-group">
          <label for="curp">CURP</label>
          <input type="text" class="form-control" id="curp" name="curp" value="<%= typeof item !== 'undefined' ? item.curp : '' %>" required>
        </div>
        <div class="button-container">
          <button type="submit" class="btn btn-primary">Guardar Cambios</button>
          <a class="btn btn-secondary" href="/<%= moduleName %>">Cancelar</a>
        </div>
      </form>
    </div>
  </div>
